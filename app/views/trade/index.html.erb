<div div class = "container" >
<div class="row row-cols-1 row-cols-md-3 g-4">
  <div class="col">
    <div class="card h-100">

 <%= link_to image_tag(trade.images.first.variant(resize: "640*480>")), trade %> 

      <div class="card-body">
        <h5 class="card-title"><%= trade.title %></h5>
        <p class="card-text"><%= truncate(trade.description, length: 120)%></p>
        <figure class="figure">
       <%= gravatar_for(trade.user, size: 96) %>
     </figure>
         </div>
    </div>
  </div>
 </div>
</div>